<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ortu.nilai.NilaiWaliFragment">


   <TextView
       android:id="@+id/button_homeb"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="88dp"
       android:fontFamily="@font/opensans"
       android:text="Nilai"
       android:textColor="@color/black"
       android:textSize="40sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.051"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:paddingTop="10dp"
       android:id="@+id/text_homeb1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="8dp"
       android:text="Tugas"
       app:layout_constraintStart_toEndOf="@+id/img_homeb1"
       app:layout_constraintTop_toBottomOf="@+id/button_homeb" />

   <ImageView
       android:paddingTop="10dp"
       android:id="@+id/img_homeb1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="44dp"
       android:src="@drawable/home_5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/button_homeb" />

   <TextView
       android:id="@+id/text_homeb2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="8dp"
       android:paddingTop="0dp"
       android:text="Ulangan\nHarian"
       app:layout_constraintStart_toEndOf="@+id/img_homeb2"
       app:layout_constraintTop_toBottomOf="@+id/button_homeb" />

   <ImageView
       android:id="@+id/img_homeb2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
       android:paddingTop="10dp"
       android:src="@drawable/home_6"
       app:layout_constraintStart_toEndOf="@id/text_homeb1"
       app:layout_constraintTop_toBottomOf="@id/button_homeb" />

   <ImageView
       android:id="@+id/img_homeb3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:paddingTop="10dp"
       android:src="@drawable/home_7"
       app:layout_constraintStart_toEndOf="@id/text_homeb2"
       app:layout_constraintTop_toBottomOf="@id/button_homeb" />

   <TextView
       android:paddingTop="10dp"
       android:id="@+id/text_homeb3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="8dp"
       android:text="UTS"
       app:layout_constraintStart_toEndOf="@+id/img_homeb3"
       app:layout_constraintTop_toBottomOf="@+id/button_homeb" />

   <ImageView
       android:id="@+id/img_homeb4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:paddingTop="10dp"
       android:src="@drawable/home_8"
       app:layout_constraintStart_toEndOf="@id/text_homeb3"
       app:layout_constraintTop_toBottomOf="@id/button_homeb" />

   <TextView
       android:paddingTop="10dp"
       android:id="@+id/text_homeb4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="4dp"
       android:text="UAS"
       app:layout_constraintStart_toEndOf="@+id/img_homeb4"
       app:layout_constraintTop_toBottomOf="@+id/button_homeb" />


   <LinearLayout
       android:id="@+id/layout_bar_nilai"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintTop_toBottomOf="@+id/text_homeb4">

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvNilaiList"
          android:layout_width="match_parent"
          android:layout_height="510dp"
          tools:layout_editor_absoluteX="0dp"
          tools:layout_editor_absoluteY="189dp" />

   </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>