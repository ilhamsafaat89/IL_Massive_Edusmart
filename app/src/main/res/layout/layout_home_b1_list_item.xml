<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardElevation="0dp"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivAbsenImg"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:contentDescription="@string/desc_7"
            android:src="@drawable/home_9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_AbsenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:fontFamily="@font/inter"
            android:text="@string/nilai_1"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivAbsenImg"
            app:layout_constraintEnd_toEndOf="@+id/ivAbsenImg"
            app:layout_constraintHorizontal_bias="0.137"
            app:layout_constraintStart_toStartOf="@+id/ivAbsenImg"
            app:layout_constraintTop_toTopOf="@+id/ivAbsenImg"
            app:layout_constraintVertical_bias="0.523" />

        <ImageView
            android:id="@+id/tv_ScoreTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/slide_up"
            app:layout_constraintBottom_toBottomOf="@+id/ivAbsenImg"
            app:layout_constraintEnd_toEndOf="@+id/ivAbsenImg"
            app:layout_constraintTop_toTopOf="@+id/ivAbsenImg"
            app:layout_constraintVertical_bias="0.461" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>