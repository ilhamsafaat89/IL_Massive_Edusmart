<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="course.CourseA6Fragment"
    android:paddingTop="60dp"
    android:paddingBottom="80dp"
    android:id="@+id/FragmentIsiTugasFisika">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/opensans"
            android:text="Tugas 1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="164dp"
            android:layout_height="28dp"
            android:layout_marginLeft="1dp"
            android:fontFamily="@font/opensans"
            android:text="Bab I"
            android:textColor="@color/orange_subjudul_edusmart"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/sv_homepage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_banner"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:contentPadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_ujian"
            tools:ignore="DuplicateIds">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_banner2"
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:contentPadding="20dp"
                app:layout_constraintTop_toBottomOf="@id/btn_ujian">

                <TextView
                    android:id="@+id/tv_nilai"
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="250dp"
                    android:layout_height="218dp"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="20dp"
                    android:text="Di kota metropolitan, terdapat taman kecil yang menjadi tempat istimewa. Pepohonan dan bunga-bunga di sana memberikan
ketenangan, meskipun tidak semua orang menyadarinya. Apa tema utama yang ingin disampaikan? Jelaskan peran taman kecil dalam kota metropolitan. Kumpulkan dalam bentuk pdf!"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_uploadtgs"
                android:layout_width="272dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="280dp"
                android:background="@drawable/btndrop"
                android:text="Upload Tugas"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/line_cv_banner2"
                tools:layout_editor_absoluteX="50dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>